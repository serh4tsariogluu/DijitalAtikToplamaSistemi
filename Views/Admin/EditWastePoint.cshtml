@model AtikDonusum.Models.WastePoint

@{
    ViewData["Title"] = "Atık Noktasını Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fa fa-edit"></i> Atık Noktasını Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- ID'yi gizli olarak taşıyoruz, bu çok önemli -->
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Ad" class="control-label fw-bold">Nokta Adı</label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Adres" class="control-label fw-bold">Açık Adres</label>
                            <textarea asp-for="Adres" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Enlem" class="control-label">Enlem (Latitude)</label>
                                <input asp-for="Enlem" class="form-control" type="number" step="any" />
                                <span asp-validation-for="Enlem" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Boylam" class="control-label">Boylam (Longitude)</label>
                                <input asp-for="Boylam" class="form-control" type="number" step="any" />
                                <span asp-validation-for="Boylam" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="KabulEdilenAtikTipleri" class="control-label fw-bold">Atık Tipleri</label>
                            <input asp-for="KabulEdilenAtikTipleri" class="form-control" />
                            <span asp-validation-for="KabulEdilenAtikTipleri" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-4">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="AktifMi" /> @Html.DisplayNameFor(model => model.AktifMi)
                            </label>
                        </div>

                        <div class="form-group d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}